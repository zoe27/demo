FROM maven:3-jdk-10 AS MAVEN_BUILD
MAINTAINER zoe

COPY pom.xml /build/
COPY src /build/src
WORKDIR /build/
RUN ls -R /build/
RUN mvn package
FROM java:8
COPY --from=MAVEN_BUILD /build/target/*.jar /app/salary-service.jar

EXPOSE 8081  ## 打开8090端口监听容器
ENTRYPOINT ["java","-jar","salary-service.jar"]  ##告
